---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Venue - PCSC 2025">
  <!-- Navigation Header -->
  <header class="sticky top-0 z-50 bg-gradient-to-r from-pink-600 to-pink-800 backdrop-blur-md border-b border-white/20">
    <div class="container mx-auto px-4 sm:px-6">
      <nav class="flex items-center justify-between h-16 lg:h-20">
        <!-- L  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="text-center">
        <div class="flex items-center justify-center space-x-3 mb-4">
          <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center p-2">
            <img src="/csp.png" alt="Computing Society of the Philippines" class="w-full h-full object-contain" />
          </div>
          <span class="text-xl font-bold">PCSC 2025</span>
        </div>
        <p class="text-gray-400 mb-4">25th Philippine Computing Science Congress</p>
        <p class="text-gray-400">University of the Immaculate Conception, Davao City</p>
      </div>
    </div>
  </footer>a href="/" class="flex items-center space-x-3">
          <div class="w-10 h-10 lg:w-12 lg:h-12 bg-white rounded-lg flex items-center justify-center p-1.5 lg:p-2">
            <img src="/csp.png" alt="Computing Society of the Philippines" class="w-full h-full object-contain" />
          </div>
          <div class="text-white">
            <div class="font-bold text-lg lg:text-xl">PCSC 2025</div>
            <div class="text-xs lg:text-sm text-white/80 hidden sm:block">Philippine Computing Science Congress</div>
          </div>
        </a>
        
        <!-- Navigation Links -->
        <div class="hidden lg:flex items-center space-x-8">
          <a href="/about" class="text-white/90 hover:text-white transition-colors font-medium">ABOUT</a>
          <a href="/program" class="text-white/90 hover:text-white transition-colors font-medium">PROGRAM</a>
          <a href="/call-for-papers" class="text-white/90 hover:text-white transition-colors font-medium">CALL FOR PAPERS</a>
          <a href="/venue" class="text-white font-medium">VENUE</a>
          <a href="/contact" class="text-white/90 hover:text-white transition-colors font-medium">CONTACT</a>
        </div>
        
        <!-- Mobile Menu Button -->
        <button class="lg:hidden text-white p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-pink-600 to-pink-800 text-white py-20">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Venue</h1>
        <p class="text-xl text-pink-100">
          University of the Immaculate Conception, Davao City
        </p>
      </div>
    </div>
  </section>

  <main>
    <!-- Venue Overview -->
    <section class="bg-white py-12 sm:py-20">
      <div class="container mx-auto px-4 sm:px-6">
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Left - Image -->
            <div class="space-y-6">
              <div class="rounded-xl overflow-hidden shadow-lg">
                <img src="/uic-main.jpg" alt="University of Illinois Chicago Main Campus" class="w-full h-80 object-cover" />
              </div>
              <div class="rounded-xl overflow-hidden shadow-lg">
                <img src="/uic-campus.jpg" alt="UIC Campus Buildings" class="w-full h-60 object-cover" />
              </div>
            </div>
            
            <!-- Right - Content -->
            <div class="space-y-8">
              <div>
                <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">University of Illinois Chicago</h2>
                <p class="text-lg text-gray-700 leading-relaxed mb-6">
                  The 25th Philippine Computing Science Congress will be held at the University of Illinois Chicago (UIC), 
                  one of the most prestigious research universities in the United States and a leading institution in 
                  computer science and engineering education.
                </p>
                <p class="text-gray-700 leading-relaxed mb-6">
                  UIC is strategically located in the heart of Chicago, providing attendees with access to world-class 
                  facilities, cutting-edge technology, and the vibrant culture of one of America's greatest cities.
                </p>
              </div>

              <!-- Quick Facts -->
              <div class="bg-gray-50 rounded-xl p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Quick Facts</h3>
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <div class="text-2xl font-bold text-pink-600">34,000+</div>
                    <div class="text-gray-600 text-sm">Students</div>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-pink-600">16</div>
                    <div class="text-gray-600 text-sm">Colleges</div>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-pink-600">1965</div>
                    <div class="text-gray-600 text-sm">Founded</div>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-pink-600">R1</div>
                    <div class="text-gray-600 text-sm">Research Tier</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Conference Facilities -->
    <section class="bg-gray-50 py-12 sm:py-20">
      <div class="container mx-auto px-4 sm:px-6">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-8 text-center">Conference Facilities</h2>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Main Auditorium -->
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Main Auditorium</h3>
              <p class="text-gray-600 text-sm mb-4">
                State-of-the-art 500-seat auditorium with advanced AV equipment, perfect for keynote presentations and main sessions.
              </p>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• High-definition projection systems</li>
                <li>• Professional sound system</li>
                <li>• Live streaming capabilities</li>
                <li>• Comfortable theater seating</li>
              </ul>
            </div>

            <!-- Breakout Rooms -->
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Breakout Rooms</h3>
              <p class="text-gray-600 text-sm mb-4">
                Multiple flexible meeting spaces for parallel sessions, workshops, and networking activities.
              </p>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• 6 rooms with 50-100 seat capacity</li>
                <li>• Interactive whiteboards</li>
                <li>• Video conferencing setup</li>
                <li>• Flexible furniture arrangement</li>
              </ul>
            </div>

            <!-- Exhibition Area -->
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Exhibition Area</h3>
              <p class="text-gray-600 text-sm mb-4">
                Spacious exhibition hall for poster sessions, technology demonstrations, and sponsor displays.
              </p>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• 3,000 sq ft exhibition space</li>
                <li>• Professional lighting</li>
                <li>• Power and internet access</li>
                <li>• Refreshment stations</li>
              </ul>
            </div>

            <!-- Computer Labs -->
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Computer Labs</h3>
              <p class="text-gray-600 text-sm mb-4">
                Modern computer laboratories equipped with the latest hardware and software for hands-on workshops.
              </p>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• 40 high-performance workstations</li>
                <li>• Latest development tools</li>
                <li>• High-speed internet</li>
                <li>• 24/7 technical support</li>
              </ul>
            </div>

            <!-- Networking Spaces -->
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Networking Spaces</h3>
              <p class="text-gray-600 text-sm mb-4">
                Comfortable lounge areas and outdoor spaces designed to facilitate networking and collaboration.
              </p>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• Modern lounge areas</li>
                <li>• Outdoor terraces</li>
                <li>• Coffee stations</li>
                <li>• Comfortable seating</li>
              </ul>
            </div>

            <!-- Dining Facilities -->
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Dining Facilities</h3>
              <p class="text-gray-600 text-sm mb-4">
                Multiple dining options on campus, from casual cafes to full-service restaurants.
              </p>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• Student union food court</li>
                <li>• Faculty dining room</li>
                <li>• Coffee shops and cafes</li>
                <li>• Catering services available</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Location & Transportation -->
    <section class="bg-white py-12 sm:py-20">
      <div class="container mx-auto px-4 sm:px-6">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-12 text-center">Location & Transportation</h2>
          
          <div class="grid lg:grid-cols-2 gap-12">
            <!-- Address & Contact -->
            <div class="space-y-8">
              <div class="bg-gray-50 rounded-xl p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">Campus Address</h3>
                <div class="space-y-4">
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-pink-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <div>
                      <p class="font-semibold text-gray-900">University of Illinois Chicago</p>
                      <p class="text-gray-700">1200 W Harrison St</p>
                      <p class="text-gray-700">Chicago, IL 60607</p>
                      <p class="text-gray-700">United States</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-pink-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <span class="text-gray-700">(312) 996-7000</span>
                  </div>
                  
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-pink-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                    </svg>
                    <a href="https://www.uic.edu" target="_blank" class="text-pink-600 hover:text-pink-800">www.uic.edu</a>
                  </div>
                </div>
              </div>

              <!-- Transportation Options -->
              <div class="space-y-6">
                <h3 class="text-2xl font-bold text-gray-900">Transportation Options</h3>
                
                <!-- By Air -->
                <div class="border-l-4 border-blue-500 pl-6">
                  <h4 class="font-semibold text-gray-900 mb-2">✈️ By Air</h4>
                  <p class="text-gray-700 mb-2"><strong>O'Hare International Airport (ORD)</strong> - 25 minutes by train</p>
                  <p class="text-gray-700 mb-2"><strong>Midway International Airport (MDW)</strong> - 35 minutes by train</p>
                  <p class="text-gray-600 text-sm">Both airports connect directly to downtown Chicago via CTA trains</p>
                </div>

                <!-- By Train -->
                <div class="border-l-4 border-green-500 pl-6">
                  <h4 class="font-semibold text-gray-900 mb-2">🚂 By Public Transit</h4>
                  <p class="text-gray-700 mb-2"><strong>Blue Line</strong> - UIC-Halsted Station (2 blocks from campus)</p>
                  <p class="text-gray-700 mb-2"><strong>Pink Line</strong> - Polk Station (4 blocks from campus)</p>
                  <p class="text-gray-600 text-sm">Chicago Transit Authority (CTA) provides excellent connectivity</p>
                </div>

                <!-- By Car -->
                <div class="border-l-4 border-orange-500 pl-6">
                  <h4 class="font-semibold text-gray-900 mb-2">🚗 By Car</h4>
                  <p class="text-gray-700 mb-2">Multiple parking garages on campus</p>
                  <p class="text-gray-700 mb-2">Easy access from I-90, I-94, and I-290</p>
                  <p class="text-gray-600 text-sm">Visitor parking available at reduced conference rates</p>
                </div>
              </div>
            </div>

            <!-- Map -->
            <div class="space-y-8">
              <div class="bg-gray-100 rounded-xl h-96 flex items-center justify-center">
                <div class="text-center">
                  <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <p class="text-gray-600 font-medium">Interactive Campus Map</p>
                  <p class="text-gray-500 text-sm mt-2">
                    <a href="https://maps.uic.edu" target="_blank" class="text-pink-600 hover:text-pink-800">
                      View on UIC Maps →
                    </a>
                  </p>
                </div>
              </div>

              <!-- Nearby Attractions -->
              <div class="bg-gradient-to-br from-pink-50 to-pink-50 rounded-xl p-8">
                <h3 class="text-xl font-bold text-gray-900 mb-6">Nearby Attractions</h3>
                <div class="space-y-4">
                  <div class="flex items-center space-x-3">
                    <div class="w-2 h-2 bg-pink-600 rounded-full"></div>
                    <span class="text-gray-700">Willis Tower (Sears Tower) - 10 minutes</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-2 h-2 bg-pink-600 rounded-full"></div>
                    <span class="text-gray-700">Navy Pier - 15 minutes</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-2 h-2 bg-pink-600 rounded-full"></div>
                    <span class="text-gray-700">Millennium Park - 12 minutes</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-2 h-2 bg-pink-600 rounded-full"></div>
                    <span class="text-gray-700">Art Institute of Chicago - 15 minutes</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-2 h-2 bg-pink-600 rounded-full"></div>
                    <span class="text-gray-700">Chicago Riverwalk - 10 minutes</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="gradient-bg py-12 sm:py-20">
      <div class="container mx-auto px-4 sm:px-6 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Ready to Join Us?</h2>
        <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
          Experience world-class facilities in the heart of Chicago. Register now to secure your spot at PCSC 2025.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="bg-white text-pink-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors text-lg">
            Register Now
          </button>
          <a href="/contact" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white/10 transition-colors text-lg">
            Contact Us
          </a>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-pink-600 rounded-lg flex items-center justify-center p-1">
            <img src="/csp.png" alt="Computing Society of the Philippines" class="w-full h-full object-contain filter brightness-0 invert" />
          </div>
          <span class="font-semibold">PCSC 2025</span>
        </div>
        
        <div class="text-center md:text-right">
          <p class="text-gray-400">© 2025 | Computing Society of the Philippines</p>
        </div>
      </div>
    </div>
  </footer>
</Layout>
