---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Call for Papers - PCSC 2026">
  <!-- Navigation Header -->
  <header class="sticky top-0 z-50 bg-gradient-to-r from-pink-600 to-pink-800 backdrop-blur-md border-b border-white/20">
    <div class="container mx-auto px-4 sm:px-6">
      <nav class="flex items-center justify-between h-16 lg:h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-3">
          <div class="w-10 h-10 lg:w-12 lg:h-12 bg-white rounded-lg flex items-center justify-center p-1.5 lg:p-2">
            <img src="/csp.png" alt="Computing Society of the Philippines" class="w-full h-full object-contain" />
          </div>
          <div class="text-white">
            <div class="font-bold text-lg lg:text-xl">PCSC 2026</div>
            <div class="text-xs lg:text-sm text-white/80 hidden sm:block">Philippine Computing Science Congress</div>
          </div>
        </a>
        
        <!-- Navigation Links -->
        <div class="hidden lg:flex items-center space-x-8">
          <a href="/about" class="text-white/90 hover:text-white transition-colors font-medium">ABOUT</a>
          <a href="/program" class="text-white/90 hover:text-white transition-colors font-medium">PROGRAM</a>
          <a href="/call-for-papers" class="text-white font-medium">CALL FOR PAPERS</a>
          <a href="/venue" class="text-white/90 hover:text-white transition-colors font-medium">VENUE</a>
          <a href="/contact" class="text-white/90 hover:text-white transition-colors font-medium">CONTACT</a>
        </div>
        
        <!-- Mobile Menu Button -->
        <button class="lg:hidden text-white p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-pink-600 to-pink-800 text-white py-20">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Call for Papers</h1>
        <p class="text-xl text-pink-100">
          Submit your research and contribute to the advancement of computing science in the Philippines
        </p>
      </div>
    </div>
  </section>
        </p>
      </div>
    </div>
  </section>

  <main>
    <!-- Overview Section -->
    <section class="bg-white py-12 sm:py-20">
      <div class="container mx-auto px-4 sm:px-6">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">Join the 26th Philippine Computing Science Congress</h2>
            <p class="text-lg text-gray-700 max-w-4xl mx-auto leading-relaxed">
              The 26th Philippine Computing Science Congress is organized by the Computing Society of the Philippines to enable local and neighboring computing educators, researchers, information and communications technology (ICT) professionals, and students to interact and share their work in computing, computer science, computational science, and ICT.
            </p>
          </div>

          <!-- Two Column Layout -->
          <div class="grid lg:grid-cols-2 gap-12">
            <!-- Left Column - Submission Info -->
            <div class="space-y-8">
              <!-- Paper Submission -->
              <div class="bg-gray-50 rounded-xl p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">Paper Submission Guidelines</h3>
                
                <div class="mb-6">
                  <h4 class="font-semibold text-gray-900 mb-3">Submission Portal</h4>
                  <a href="https://cmt3.research.microsoft.com/PCSC2026" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     class="inline-flex items-center text-pink-600 hover:text-pink-800 font-medium bg-white px-4 py-2 rounded-lg border border-pink-200 hover:border-pink-400 transition-colors">
                    Submit Your Paper
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </a>
                </div>
                
                <div class="space-y-4">
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-2">Format Requirements</h4>
                    <ul class="text-gray-700 space-y-1">
                      <li>• Use the prescribed PCSC 2026 template</li>
                      <li>• Minimum 6 pages, maximum 8 pages (including references)</li>
                      <li>• PDF format only</li>
                      <li>• Original work not submitted elsewhere</li>
                    </ul>
                  </div>
                  
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-2">Review Process</h4>
                    <p class="text-gray-700">
                      All papers undergo double-blind peer review by at least two reviewers. Papers must receive an average positive rating for inclusion in the conference program and proceedings.
                    </p>
                  </div>
                </div>
              </div>

              <!-- Double-Blind Review Guidelines -->
              <div class="bg-blue-50 rounded-xl p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">Double-Blind Review Guidelines</h3>
                <div class="space-y-4">
                  <div class="flex items-start">
                    <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                      <span class="text-white text-sm font-bold">1</span>
                    </div>
                    <p class="text-gray-700">Remove author names and affiliations from the manuscript</p>
                  </div>
                  <div class="flex items-start">
                    <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                      <span class="text-white text-sm font-bold">2</span>
                    </div>
                    <p class="text-gray-700">Remove citations and references that identify the authors. Use [Anonymous, 2025] format</p>
                  </div>
                  <div class="flex items-start">
                    <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                      <span class="text-white text-sm font-bold">3</span>
                    </div>
                    <p class="text-gray-700">Do not include acknowledgments or funding sources</p>
                  </div>
                  <div class="flex items-start">
                    <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                      <span class="text-white text-sm font-bold">4</span>
                    </div>
                    <p class="text-gray-700">For blinded references, write '[Anonymous 2026] Details omitted for double-blind reviewing.'</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Right Column - Dates & Info -->
            <div class="space-y-8">
              <!-- Important Dates -->
              <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-200">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">Important Dates</h3>
                <div class="space-y-6">
                  <!-- Paper Submission -->
                  <div class="border-l-4 border-pink-500 pl-6 py-3">
                    <h4 class="font-semibold text-gray-900 mb-2">Paper Submission Deadline</h4>
                    <div class="bg-pink-100 text-pink-800 px-4 py-2 rounded-lg text-sm font-semibold inline-block">
                      January 15, 2026
                    </div>
                  </div>

                  <!-- Author Notification -->
                  <div class="border-l-4 border-blue-500 pl-6 py-3">
                    <h4 class="font-semibold text-gray-900 mb-2">Author Notification</h4>
                    <div class="bg-blue-100 text-blue-800 px-4 py-2 rounded-lg text-sm font-semibold inline-block">
                      February 28, 2026
                    </div>
                  </div>

                  <!-- Camera-Ready Submission -->
                  <div class="border-l-4 border-green-500 pl-6 py-3">
                    <h4 class="font-semibold text-gray-900 mb-2">Camera-Ready Submission</h4>
                    <div class="bg-green-100 text-green-800 px-4 py-2 rounded-lg text-sm font-semibold inline-block">
                      March 15, 2026
                    </div>
                  </div>

                  <!-- Early-Bird Registration -->
                  <div class="border-l-4 border-orange-500 pl-6 py-3">
                    <h4 class="font-semibold text-gray-900 mb-2">Early-Bird Registration</h4>
                    <div class="bg-orange-100 text-orange-800 px-4 py-2 rounded-lg text-sm font-semibold inline-block">
                      March 31, 2026
                    </div>
                  </div>

                  <!-- Conference Date -->
                  <div class="border-l-4 border-pink-600 bg-gradient-to-r from-pink-50 to-pink-50 pl-6 py-4 rounded-r-lg">
                    <h4 class="font-semibold text-gray-900 mb-2">Conference Dates</h4>
                    <div class="bg-pink-600 text-white px-4 py-2 rounded-lg text-sm font-semibold inline-block">
                      April 23-25, 2026
                    </div>
                  </div>
                </div>
              </div>

              <!-- Student Research Workshop -->
              <div class="bg-gradient-to-br from-green-50 to-blue-50 rounded-xl p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Student Research Workshop</h3>
                <p class="text-gray-700 mb-4">
                  The PCSC 2026 Student Research Workshop invites students at various stages of their research to present their work and receive mentorship and feedback from the research community.
                </p>
                <p class="text-gray-700 mb-6">
                  This is an opportunity to present exciting contributions that showcase innovative technologies and detail preliminary experiments that foster discussions to provoke new ideas.
                </p>
                <a href="/student-research" class="inline-flex items-center text-green-600 hover:text-green-800 font-medium">
                  Learn More
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Areas of Interest -->
    <section class="bg-gray-50 py-12 sm:py-20">
      <div class="container mx-auto px-4 sm:px-6">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-8 text-center">Areas of Interest</h2>
          <p class="text-center text-gray-600 mb-12 text-lg">Include (But are Not Limited to)</p>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-pink-600 mb-4">Artificial Intelligence</h3>
              <ul class="text-gray-700 space-y-2 text-sm">
                <li>• Natural Language Processing</li>
                <li>• Machine Learning</li>
                <li>• Computer Vision</li>
                <li>• Intelligent Systems</li>
                <li>• Affective and Empathic Computing</li>
              </ul>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-blue-600 mb-4">Computer Science Theory</h3>
              <ul class="text-gray-700 space-y-2 text-sm">
                <li>• Computational Theory and Algorithms</li>
                <li>• Data Structures</li>
                <li>• Complexity Theory</li>
                <li>• Formal Methods</li>
                <li>• Cryptography</li>
              </ul>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-green-600 mb-4">Systems & Networks</h3>
              <ul class="text-gray-700 space-y-2 text-sm">
                <li>• Computer Networks</li>
                <li>• Distributed Systems</li>
                <li>• Operating Systems</li>
                <li>• Cybersecurity</li>
                <li>• Cloud Computing</li>
              </ul>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-orange-600 mb-4">Software Engineering</h3>
              <ul class="text-gray-700 space-y-2 text-sm">
                <li>• Software Development</li>
                <li>• Software Architecture</li>
                <li>• Testing and Quality Assurance</li>
                <li>• Agile Methodologies</li>
                <li>• DevOps</li>
              </ul>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-red-600 mb-4">Data & Information</h3>
              <ul class="text-gray-700 space-y-2 text-sm">
                <li>• Databases and Information Retrieval</li>
                <li>• Data Mining</li>
                <li>• Big Data Analytics</li>
                <li>• Information Systems</li>
                <li>• Data Visualization</li>
              </ul>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-indigo-600 mb-4">Emerging Technologies</h3>
              <ul class="text-gray-700 space-y-2 text-sm">
                <li>• Ubiquitous and Pervasive Computing</li>
                <li>• Internet of Things (IoT)</li>
                <li>• Blockchain Technology</li>
                <li>• Quantum Computing</li>
                <li>• Modeling and Simulation</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="gradient-bg py-12 sm:py-20">
      <div class="container mx-auto px-4 sm:px-6 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Ready to Submit Your Research?</h2>
        <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
          Join the leading computing science researchers and professionals in the Philippines. Submit your paper today.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="https://cmt3.research.microsoft.com/PCSC2026" 
             target="_blank"
             class="bg-white text-pink-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors text-lg">
            Submit Paper
          </a>
          <a href="/author-guidelines" 
             class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white/10 transition-colors text-lg">
            Author Guidelines
          </a>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-pink-600 rounded-lg flex items-center justify-center p-1">
            <img src="/csp.png" alt="Computing Society of the Philippines" class="w-full h-full object-contain filter brightness-0 invert" />
          </div>
          <span class="font-semibold">PCSC 2026</span>
        </div>
        
        <div class="text-center md:text-right">
          <p class="text-gray-400">© 2026 | Computing Society of the Philippines</p>
        </div>
      </div>
    </div>
  </footer>
</Layout>
